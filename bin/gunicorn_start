#!/bin/bash
NAME="myproject"
DJANGO_DIR=/home/ubuntu/myproject/myproject
SOCKFILE=/hom/hubuntu/myproject/run/gunicorn.sock
BASH_PROFILE=/home/ubuntu/.bash_profile
USER=ubuntu
GROUP=ubuntu
NUM_WORKERS=3
DJANGO_SETTINGS_MODULE=myproject.config.settings.production
DJANGO_WSGI_MODULE=myproject.config.wsgi
LOG_FILE=/home/ubuntu/myproject/logs/gunicorn.log
LOG_LEVEL=debug

echo "Starting $USER as `whoami`"

cd $DJANGODIR
source $BASH_PROFILE
export DJANGO_SETTINGS_MODULE=$DJANGO_SETTINGS_MODULE
export PYTHONPATH=$DJANGODIR:$PYTHONPATH

# Create the run directory if it doesn't exist
RUNDIR=$(dirname $SOCKFILE)
test -d $RUNDIR || mkdir -p $RUNDIR

# Start your Django Unicorn
# Programs meant to be run under supervisor should not daemonize themselves (do not use --daemon)
exec ../bin/gunicorn ${DJANGO_WSGI_MODULE}:application \
  --name $NAME \
  --workers $NUM_WORKERS \
  --user=$USER --group=$GROUP \
  --bind=unix:$SOCKFILE \
  --log-file=$LOG_FILE \
  --log-level=$LOG_LEVEL
