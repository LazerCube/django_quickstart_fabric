[Unit]
Description=gunicorn daemon
Requires=gunicorn.socket
After=network.target

[Service]
User=django
Group=django
WorkingDirectory=/home/django/myproject/myproject
ExecStart=/home/django/.virtualenvs/myproject/bin/gunicorn --workers 3 --bind unix:/home/django/myproject/myproject/myproject.sock config.wsgi:application

[Install]
WantedBy=multi-user.target
